<?xml version="1.0"?>
<Container version="2">
    <!-- App info -->
    <Name>wh-stash</Name>
    <Overview>An organizer for your porn, written in Go.</Overview>
    <Category>MediaApp:Video MediaApp:Photos MediaServer:Video MediaServer:Photos</Category>
    <Beta>false</Beta>
    <!-- Image settings -->
    <Repository>stashapp/stash:latest</Repository>
    <Registry>https://hub.docker.com/r/stashapp/stash</Registry>
    <Project>https://stashapp.cc/</Project>
    <!-- Docker settings -->
    <WebUI>http://[IP]:[PORT:9999]/</WebUI>
    <ExtraParams>--init --no-healthcheck</ExtraParams>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <PrivilegedReq>false</PrivilegedReq>
    <Shell>bash</Shell>
    <!-- Template settings -->
    <GitHub>https://github.com/whallin/unraid-templates</GitHub>
    <ReadMe>https://github.com/whallin/unraid-templates</ReadMe>
    <Support>https://github.com/whallin/unraid-templates/issues</Support>
    <Icon>https://raw.githubusercontent.com/whallin/unraid-templates/main/whallin/imgs/stash.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/whallin/unraid-templates/main/whallin/stash.xml</TemplateURL>
    <Date>2000-01-01</Date>
    <!-- Ports -->
    <Config Name="Stash web UI port" Target="9999" Default="9999" Mode="tcp" Description="The TCP port Stash listens on." Type="Port" Display="always" Required="true" Mask="false">9999</Config>
    <!-- Volumes -->
    <Config Name="Stash media" Target="/data" Default="/mnt/user/media/wh-stash" Mode="rw" Description="The location where Stash stores your media." Type="Path" Display="always" Required="true" Mask="false" />
    <Config Name="Stash config" Target="/root/.stash" Default="/mnt/user/appdata/wh-stash/root" Mode="rw" Description="The location where Stash stores its configs." Type="Path" Display="always" Required="true" Mask="false" />
    <Config Name="Stash metadata" Target="/root/.stash" Default="/mnt/user/appdata/wh-stash/metadata" Mode="rw" Description="The location where Stash stores its metadata." Type="Path" Display="always" Required="true" Mask="false" />
    <Config Name="Stash cache" Target="/root/.stash" Default="/mnt/user/appdata/wh-stash/cache" Mode="rw" Description="The location where Stash stores its cache." Type="Path" Display="always" Required="true" Mask="false" />
    <Config Name="Stash blobs" Target="/root/.stash" Default="/mnt/user/appdata/wh-stash/blobs" Mode="rw" Description="The location where Stash stores its blobs (covers, thumbnails)." Type="Path" Display="always" Required="true" Mask="false" />
    <Config Name="Stash generated" Target="/root/.stash" Default="/mnt/user/appdata/wh-stash/generated" Mode="rw" Description="The location where Stash stores its generated content (screenshots, previews, transcodes, sprites)." Type="Path" Display="always" Required="true" Mask="false" />
</Container>